{
  "compilerOptions": {
    "target": "ES2022",
		"module": "CommonJS",
		"moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
			"@norwegianForestTypes": ["./NorwegianForest/libs/@types/index.d.ts"],
			"@norwegianForestTypes/*": ["./NorwegianForest/libs/@types/*"],
			"@norwegianForestLibs/*": ["./NorwegianForest/libs/*"],
			"@norwegianForestTables/*": ["./NorwegianForest/tables/*"],
			"@xolo/*": ["./Xoloitzcuintli/*"],
		},
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}